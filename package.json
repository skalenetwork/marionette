    "hardhat": "^2.22.12",
    "kill-port": "^2.0.1",
    "lodash": "^4.17.21",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typechain": "^7.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^4.9.6",
    "@skalenetwork/ima-interfaces": "^2.0.0",
